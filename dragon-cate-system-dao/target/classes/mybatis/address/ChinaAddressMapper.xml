<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="titan.wms.common.dao.mapper.address.ChinaAddressMapper" >

    <sql id="TABLE_NAME">
        china_address
    </sql>


    <sql id="SELECT_ALL_COLUMNS">
        (`id`, `parent_id`, `name`, `short_name`, `longitude`, `latitude`, `level`, `sort`, `status`)
    </sql>


    <resultMap id="addressResultMap" type="titan.wms.common.dao.meta.address.ChinaAddressDO">
        <result column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="getAddressByParentId" resultMap="addressResultMap" parameterType="java.lang.Integer">
        select id, name from <include refid="TABLE_NAME" /> where parent_id=#{id};
    </select>



</mapper>