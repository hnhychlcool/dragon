<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="titan.wms.common.dao.mapper.basicInfo.GoodsCategoryMapper">

    <sql id="TABLE_NAME">
        basic_goods_category
    </sql>

    <sql id="INSERT_ALL_COLUMNS">
        `parent_id`, `code`, `name`, `level`,
        `operator_id`, `create_time`, `update_time`
    </sql>

    <sql id="SELECT_ALL_COLUMNS">
        `id`,
        <include refid="INSERT_ALL_COLUMNS"/>
    </sql>

    <resultMap id="goodsCategoryMap" type="GoodsCategoryDO">
        <result column="id" property="id"/>
        <result column="parent_id" property="parentId"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="level" property="level"/>
        <result column="operator_id" property="operatorId"/>
        <result column="is_valid" property="valid"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="GoodsCategoryDO" useGeneratedKeys="true" keyProperty="id">
        INSERT into
        <include refid="TABLE_NAME"/>
        (
        <include refid="INSERT_ALL_COLUMNS"/>
        )
        VALUES (#{parentId}, #{code}, #{name}, #{level},
        #{operatorId}, now(), now())
    </insert>

    <update id="updateGoodsCategory" parameterType="GoodsCategoryDO">
        UPDATE
        <include refid="TABLE_NAME"/>
        <set>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="name != null and name !='' ">
                name = #{name},
            </if>
            <if test="level != null ">
                level = #{level},
            </if>
            <if test="operatorId != null and operatorId != ''">
                operator_id = #{operatorId},
            </if>
            update_time = now()
        </set>
        WHERE  id=#{id};
    </update>

    <select id="getById"  resultMap="goodsCategoryMap">
        SELECT
        <include refid="SELECT_ALL_COLUMNS"/>
        FROM
        <include refid="TABLE_NAME"/>
        WHERE  is_valid=true and id=#{id};
    </select>

    <sql id="where_condition">

        <if test="query.parentName != null and query.parentName != '' ">
            join <include refid="TABLE_NAME"/> b on a.parent_id=b.id and b.name like CONCAT('%', #{query.parentName} ,'%')
        </if>
        <where>
            <if test="query.code != null and query.code != '' ">
                and a.code like CONCAT('%', #{query.code} ,'%')
            </if>
            <if test="query.name != null and query.name != '' ">
                and a.name like CONCAT('%', #{query.name} ,'%')
            </if>
        </where>
    </sql>

    <select id="countAll" resultType="java.lang.Integer">
        SELECT count(1) FROM
        <include refid="TABLE_NAME"/> a
        <include refid="where_condition"/>

    </select>

    <select id="list" resultMap="goodsCategoryMap">
        select a.* from
        <include refid="TABLE_NAME"/> a
        <include refid="where_condition"/>
        order by a.id desc limit #{limit} offset #{offset}
    </select>

    <select id="getByCode" resultMap="goodsCategoryMap">
        select * from
        <include refid="TABLE_NAME"/>
        WHERE  is_valid=true and code = #{code}
    </select>

</mapper>