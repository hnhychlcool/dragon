<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="titan.wms.common.dao.mapper.basicInfo.GoodsBrandMapper">

    <sql id="TABLE_NAME">
        basic_goods_brand
    </sql>

    <sql id="INSERT_ALL_COLUMNS">
        `code`, `name`,
        `operator_id`, `create_time`, `update_time`
    </sql>
    <sql id="SELECT_ALL_COLUMNS">
        `id`,
        <include refid="INSERT_ALL_COLUMNS"/>
    </sql>

    <resultMap id="goodsBrandMap" type="GoodsBrandDO">
        <result column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="name" property="name"/>
        <result column="operator_id" property="operatorId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="addGoodsBrand" parameterType="GoodsBrandDO">
        INSERT into
        <include refid="TABLE_NAME"/>
        (
        <include refid="INSERT_ALL_COLUMNS"/>
        )
        VALUES ( #{code}, #{name},
        #{operatorId}, now(), now())
    </insert>

    <update id="updateGoodsBrand" parameterType="GoodsBrandDO">
        UPDATE
        <include refid="TABLE_NAME"/>
        <set>
            <if test="name != null and name != '' ">
                name = #{name},
            </if>
            update_time = now()
        </set>
        WHERE  id=#{id};
    </update>

    <select id="queryGoodsBrand" parameterType="GoodsBrandDO" resultMap="goodsBrandMap">
        SELECT
        <include refid="SELECT_ALL_COLUMNS"/>
        FROM
        <include refid="TABLE_NAME"/>
        WHERE id=#{id};
    </select>

    <select id="queryDOById" resultMap="goodsBrandMap">
        SELECT
        <include refid="SELECT_ALL_COLUMNS"/>
        FROM
        <include refid="TABLE_NAME"/>
        WHERE id = #{id}
    </select>

    <select id="queryGoodsBrandByName" resultMap="goodsBrandMap">
        SELECT
        <include refid="SELECT_ALL_COLUMNS"/>
        FROM
        <include refid="TABLE_NAME"/>
        WHERE name = #{name}
    </select>

</mapper>