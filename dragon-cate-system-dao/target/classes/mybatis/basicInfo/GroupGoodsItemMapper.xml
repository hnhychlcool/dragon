<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="titan.wms.common.dao.mapper.basicInfo.GroupGoodsItemMapper" >
    <resultMap id="BaseResult" type="GroupGoodsItemDO" >
        <result column="id" property="id"/>
        <result column="group_id" property="groupId"/>
        <result column="group_code" property="groupCode"/>
        <result column="sku_code" property="skuCode"/>
        <result column="sku_barcode" property="skuBarcode"/>
        <result column="client_id" property="clientId"/>
        <result column="client_code" property="clientCode"/>
        <result column="count" property="count"/>
        <result column="sequence" property="sequence"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="TableName">
        outbound_group_goods_item
    </sql>

    <sql id="BaseColumn" >
        `group_id`, 
        `group_code`, 
        `sku_code`, 
        `sku_barcode`, 
        `client_id`,
        `client_code`,
        `count`,
        `sequence`,
        `create_time`,
        `update_time`
    </sql>

    <insert id="insert" parameterType="GroupGoodsItemDO" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
          <include refid="TableName" /> (<include refid="BaseColumn" />)
        VALUES(
          #{groupId},
          #{groupCode},
          #{skuCode},
          #{skuBarcode},
          #{clientId},
          #{clientCode},
          #{count},
          #{sequence},
          NOW(),
          NOW()
        )
    </insert>

    <select id="getById" resultMap="BaseResult">
        SELECT
          id, <include refid="BaseColumn" />
        FROM
          <include refid="TableName"/>
        WHERE
          id = #{id}
    </select>

    <select id="listByGroupId" resultMap="BaseResult">
        SELECT
          id, <include refid="BaseColumn" />
        FROM
          <include refid="TableName"/>
        WHERE
          group_id = #{groupId}
        ORDER BY
          sequence
    </select>

    <delete id="deleteById">
        DELETE
        FROM
          <include refid="TableName"/>
        WHERE
          id = #{id}
    </delete>

    <delete id="deleteByGroupIds">
        DELETE
        FROM
          <include refid="TableName"/>
        WHERE group_id IN
        <foreach collection="groupIds" item="groupId" index="index" open="(" separator="," close=")">
          #{groupId}
        </foreach>
    </delete>

    <insert id="batchInsert" parameterType="GroupGoodsItemDO">
        INSERT INTO
          <include refid="TableName" /> (<include refid="BaseColumn" />)
        VALUES
          <foreach collection="list" item="item" index="index" separator=",">
          (
            #{item.groupId},
            #{item.groupCode},
            #{item.skuCode},
            #{item.skuBarcode},
            #{item.clientId},
            #{item.clientCode},
            #{item.count},
            #{item.sequence},
            NOW(),
            NOW()
          )
          </foreach>
    </insert>
</mapper>