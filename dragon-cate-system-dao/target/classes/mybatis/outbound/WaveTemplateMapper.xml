<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="titan.wms.common.dao.mapper.outbound.WaveTemplateMapper" >
    <resultMap id="BaseResult" type="WaveTemplateDO" >
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="is_auto" property="auto"/>
        <result column="is_can_lack" property="canLack"/>
        <result column="eiq_id" property="eiqId"/>
        <result column="inventory_rule" property="inventoryRuleList" typeHandler="titan.wms.common.dao.typehandler.LongListTypeHandler"/>
        <result column="pick_rule" property="pickRuleList" typeHandler="titan.wms.common.dao.typehandler.LongListTypeHandler"/>
        <result column="replenishment_rule" property="replenishmentRuleList" typeHandler="titan.wms.common.dao.typehandler.LongListTypeHandler"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="TableName">
        outbound_wave_template
    </sql>

    <sql id="BaseColumn" >
        `name`,
        `is_auto`,
        `is_can_lack`,
        `eiq_id`,
        `inventory_rule`,
        `pick_rule`,
        `replenishment_rule`,
        `create_time`,
        `update_time`
    </sql>

    <insert id="insert" parameterType="WaveTemplateDO" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
          <include refid="TableName" /> (<include refid="BaseColumn" />)
        VALUES(
          #{name},
          #{auto},
          #{canLack},
          #{eiqId},
          #{inventoryRuleList, typeHandler=titan.wms.common.dao.typehandler.LongListTypeHandler},
          #{pickRuleList, typeHandler=titan.wms.common.dao.typehandler.LongListTypeHandler},
          #{replenishmentRuleList, typeHandler=titan.wms.common.dao.typehandler.LongListTypeHandler},
          NOW(),
          NOW()
        )
    </insert>

    <select id="getById" resultMap="BaseResult">
        SELECT
          id, <include refid="BaseColumn" />
        FROM
          <include refid="TableName"/>
        WHERE
          id = #{id}
    </select>

    <delete id="deleteById">
        DELETE
        FROM
          <include refid="TableName"/>
        WHERE
          id = #{id}
    </delete>

    <select id="getList" resultMap="BaseResult">
        SELECT
            id, <include refid="BaseColumn" />
        FROM
            <include refid="TableName"/>
        WHERE
            1 = 1
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%',#{name},'%')
            </if>
    </select>

    <update id="updateTemplate" parameterType="WaveTemplateDO">
        UPDATE
            <include refid="TableName" />
        <set>
            `is_auto` = #{auto},
            `is_can_lack` = #{canLack},
            <if test="eiqId > 0"> `eiq_id` = #{eiqId}, </if>
            <if test="inventoryRuleList != null">
                `inventory_rule` = #{inventoryRuleList, typeHandler=titan.wms.common.dao.typehandler.LongListTypeHandler},
            </if>
            <if test="pickRuleList != null">
                `pick_rule` = #{pickRuleList, typeHandler=titan.wms.common.dao.typehandler.LongListTypeHandler},
            </if>
            <if test="replenishmentRuleList != null">
                `replenishment_rule` = #{replenishmentRuleList, typeHandler=titan.wms.common.dao.typehandler.LongListTypeHandler},
            </if>
            `update_time` = NOW()
        </set>
        WHERE
            id = #{id}
    </update>

    <delete id="batchDeleteById">
        DELETE FROM
            <include refid="TableName" />
        WHERE id IN
            <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
                #{id}
            </foreach>
    </delete>
</mapper>