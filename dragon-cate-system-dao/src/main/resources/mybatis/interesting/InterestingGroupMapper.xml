<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dragon.cate.dao.mapper.interesting.InterestingGroupMapper">

    <sql id="TABLE_NAME">
        dragon.interesting_group
    </sql>

    <resultMap type="com.dragon.cate.domain.dbo.interesting.InterestingGroupDO" id="InterestingGroupMap">
        <result property="id" column="id"/>
        <result property="schoolId" column="school_id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="title" column="title"/>
        <result property="groupDesc" column="group_desc"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="InterestingGroupMap">
        select
        id, school_id, name, icon, title, group_desc from
        <include refid="TABLE_NAME"/>
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="InterestingGroupMap">
        select
        id, school_id, name, icon, title, group_desc from
        <include refid="TABLE_NAME"/>
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="InterestingGroupMap">
        select
        id, school_id, name, icon, title, group_desc from
        <include refid="TABLE_NAME"/>
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="schoolId != null">
                and school_id = #{schoolId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="group_desc != null and group_desc != ''">
                and group_desc = #{groupDesc}
            </if>
        </where>
    </select>

    <select id="queryByName" resultType="com.dragon.cate.domain.dbo.interesting.InterestingGroupDO">
        SELECT * FROM
        <include refid="TABLE_NAME"/>
        WHERE name = #{name}
        limit 1;
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="TABLE_NAME"/>
        (school_id
        , name
        , icon
        , title
        , group_desc
        )
        values
        (#{schoolId}, #{name}, #{icon}, #{title}, #{groupDesc})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update
        <include refid="TABLE_NAME"/>
        <set>
            <if test="schoolId != null">
                school_id = #{schoolId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="group_desc != null and group_desc != ''">
                group_desc = #{groupDesc},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from
        <include refid="TABLE_NAME"/>
        where id = #{id}
    </delete>

</mapper>