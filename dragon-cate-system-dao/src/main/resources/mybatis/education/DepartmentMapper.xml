<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dragon.cate.dao.mapper.education.DepartmentMapper">

    <sql id="TABLE_NAME">
        dragon.department
    </sql>

    <resultMap type="com.dragon.cate.domain.dbo.education.Department" id="DepartmentMap">
        <result property="id" column="id"/>
        <result property="schoolId" column="school_id"/>
        <result property="name" column="name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DepartmentMap">
        select
        id, school_id, name, create_time, update_time from
        <include refid="TABLE_NAME"/>
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DepartmentMap">
        select
        id, school_id, name, create_time, update_time from
        <include refid="TABLE_NAME"/>
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DepartmentMap">
        select
        id, school_id, name, create_time, update_time from
        <include refid="TABLE_NAME"/>
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="schoolId != null">
                and school_id = #{schoolId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true" >
        insert into
        <include refid="TABLE_NAME"/>
        (school_id
        , name
        , create_time
        , update_time
        )
        values
        (#{schoolId}, #{name}, now(), now())
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update
        <include refid="TABLE_NAME"/>
        <set>
            <if test="schoolId != null">
                school_id = #{schoolId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from
        <include refid="TABLE_NAME"/>
        where id = #{id}
    </delete>

</mapper>