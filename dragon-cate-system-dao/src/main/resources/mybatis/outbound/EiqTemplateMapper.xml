<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="titan.wms.common.dao.mapper.outbound.EiqTemplateMapper" >
    <resultMap id="BaseResult" type="EiqTemplateDO" >
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="max_order_count" property="maxOrderCount"/>
        <result column="match_rule" property="matchRule"/>
        <result column="ordering_rule" property="orderingRuleList" typeHandler="titan.wms.common.dao.typehandler.EiqOrderingRuleTypeHandler"/>
        <result column="is_enable" property="enable"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="TableName">
        outbound_eiq_template
    </sql>

    <sql id="BaseColumn" >
        `name`,
        `max_order_count`,
        `match_rule`,
        `ordering_rule`,
        `is_enable`,
        `create_time`,
        `update_time`
    </sql>

    <insert id="insert" parameterType="EiqTemplateDO" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
          <include refid="TableName" /> (<include refid="BaseColumn" />)
        VALUES(
          #{name},
          #{maxOrderCount},
          #{matchRule},
          #{orderingRuleList, typeHandler=titan.wms.common.dao.typehandler.EiqOrderingRuleTypeHandler},
          #{enable},
          NOW(),
          NOW()
        )
    </insert>

    <select id="getById" resultMap="BaseResult">
        SELECT
          id, <include refid="BaseColumn" />
        FROM
          <include refid="TableName"/>
        WHERE
          id = #{id}
    </select>

    <delete id="deleteById">
        DELETE
        FROM
          <include refid="TableName"/>
        WHERE
          id = #{id}
    </delete>

    <select id="getList" resultMap="BaseResult">
        SELECT
            id, <include refid="BaseColumn" />
        FROM
            <include refid="TableName"/>
        WHERE
            1 = 1
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%',#{name},'%')
            </if>
    </select>

    <update id="updateTemplate" parameterType="EiqTemplateDO">
        UPDATE
            <include refid="TableName" />
        <set>
            <if test="name != null and name != ''"> `name` = #{name}, </if>
            <if test="maxOrderCount != null"> `max_order_count` = #{maxOrderCount}, </if>
            <if test="orderingRuleList != null">
                `ordering_rule` = #{orderingRuleList, typeHandler=titan.wms.common.dao.typehandler.EiqOrderingRuleTypeHandler},
            </if>
            <if test="matchRule != null">
                `match_rule` = #{matchRule},
            </if>
            `is_enable` = #{enable},
            `update_time` = NOW()
        </set>
        WHERE
            id = #{id}
    </update>

    <delete id="batchDeleteById">
        DELETE FROM
            <include refid="TableName" />
        WHERE id IN
            <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
                #{id}
            </foreach>
    </delete>
</mapper>