<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="titan.wms.common.dao.mapper.outbound.OutboundOrderProgressMapper" >
    <resultMap id="BaseResult" type="OutboundOrderProgressDO" >
        <result column="id" property="id"/>
        <result column="order_id" property="orderId"/>
        <result column="order_no" property="orderNo"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="allocate_complete_time" property="allocateCompleteTime"/>
        <result column="picking_complete_time" property="pickingCompleteTime"/>
        <result column="sorting_complete_time" property="sortingCompleteTime"/>
        <result column="packaging_complete_time" property="packagingCompleteTime"/>
        <result column="loading_complete_time" property="loadingCompleteTime"/>
        <result column="delivery_time" property="deliveryTime"/>
        <result column="cancel_time" property="cancelTime"/>
    </resultMap>

    <sql id="TableName">
        outbound_order_progress
    </sql>

    <sql id="BaseColumn" >
        `order_id`,
        `order_no`,
        `create_time`,
        `update_time`,
        `allocate_complete_time`,
        `picking_complete_time`,
        `sorting_complete_time`,
        `packaging_complete_time`,
        `loading_complete_time`,
        `delivery_time`,
        `cancel_time`
    </sql>

    <insert id="insert" parameterType="OutboundOrderProgressDO" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO
          <include refid="TableName" /> (<include refid="BaseColumn" />)
        VALUES(
          #{orderId},
          #{orderNo},
          NOW(),
          NOW(),
          #{allocateCompleteTime},
          #{pickingCompleteTime},
          #{sortingCompleteTime},
          #{packagingCompleteTime},
          #{loadingCompleteTime},
          #{deliveryTime},
          #{cancelTime}
        )
    </insert>

    <select id="getById" resultMap="BaseResult">
        SELECT
          id, <include refid="BaseColumn" />
        FROM
          <include refid="TableName"/>
        WHERE
          id = #{id}
    </select>

    <delete id="deleteById">
        DELETE
        FROM
          <include refid="TableName"/>
        WHERE
          id = #{id}
    </delete>
</mapper>